<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="VanillaDefaultEncryption" parent="AdwBin">
    <property name="halign">fill</property>
    <property name="valign">fill</property>
    <property name="hexpand">true</property>
    <child>
      <object class="GtkOverlay">
        <property name="valign">center</property>
        <child type="overlay">
          <object class="GtkButton" id="btn_next">
            <property name="margin-end">12</property>
            <property name="margin-start">12</property>
            <property name="icon-name">go-next-symbolic</property>
            <property name="halign">end</property>
            <property name="valign">center</property>
            <property name="visible">false</property>
            <property name="tooltip-text" translatable="true">Next</property>
            <style>
              <class name="circular"/>
              <class name="suggested-action"/>
            </style>
          </object>
        </child>
        <child>
          <object class="AdwStatusPage" id="status_page">
            <property name="icon-name">security-medium-symbolic</property>
            <property name="title" translatable="true">Disk Encryption</property>
            <property name="description" translatable="true">Vanilla OS supports encrypting your data to prevent unauthorized acces to files and passwords.</property>
            <child>
              <object class="AdwPreferencesPage">
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="true">Encrypt installation disk</property>
                        <property name="subtitle" translatable="true">Use a strong password to decrypt your data every time the system starts.</property>
                        <child type="suffix">
                          <object class="GtkSwitch" id="use_encryption_switch">
                            <property name="valign">center</property>
                          </object>
                        </child>
                        <property name="activatable-widget">use_encryption_switch</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="visible" bind-source="use_encryption_switch" bind-property="active" bind-flags="sync-create"/>
                    <child>
                      <object class="AdwPasswordEntryRow" id="password_entry">
                        <property name="title" translatable="true">Password</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPasswordEntryRow" id="confirm_password_entry">
                        <property name="title" translatable="true">Confirm password</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
